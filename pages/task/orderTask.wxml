<view class="cu-list menu-avatar solid-bottom">
  <view class="cu-item">
    <image class="cu-avatar round lg" src="https://ossweb-img.qq.com/images/lol/web201310/skin/big10001.jpg"></image>
    <view class="content">
      <view class="text-grey">服务包名称</view>
      <view class="text-gray text-sm flex">
        <view class="text-cut">
          <text class="cuIcon-infofill text-red  margin-right-xs"></text>
          服务包简介内容,服务包简介内容
        </view>
      </view>
    </view>
  </view>
</view>
<checkbox-group class="block solid-bottom" bindchange="CheckboxChange">
  <view class="cu-form-group">
    <view class="title"><text class="cuIcon-titles text-orange"></text>完成项目</view>
    <checkbox class="blue" value="A"></checkbox>
  </view>
  <view class="cu-form-group">
    <view class="title">数字干预疗法(1/3)</view>
    <checkbox class='round blue' value="B"></checkbox>
  </view>
  <view class="cu-form-group">
    <view class="title">按摩(2/2)</view>
    <checkbox disabled="true" class='round blue' value="C"></checkbox>
  </view>
  <view class="cu-form-group">
    <view class="title">按摩(1/4)</view>
    <checkbox class='round blue' :class="checkbox[2].checked?'checked':''" :checked="checkbox[2].checked?true:false" value="C"></checkbox>
  </view>
</checkbox-group>
<view class="cu-bar bg-white solid-bottom">
  <view class="action">
    <text class="cuIcon-title text-orange "></text> 服务内容
  </view>
</view>
<view class="cu-form-group solid-bottom">
  <textarea maxlength="-1" :disabled="modalName!=null" placeholder="具体服务内容"></textarea>
</view>
<view class="cu-bar bg-white solid-bottom">
  <view class="action">
    <text class="cuIcon-title text-orange "></text> 服务评价
  </view>
</view>
<view class="cu-form-group solid-bottom">
  <textarea maxlength="-1" :disabled="modalName!=null" placeholder="服务评价"></textarea>
</view>
<view class="padding flex flex-direction margin-top">
  <button class="cu-btn bg-orange margin-tb-sm lg">提交服务报告</button>
</view>